@model TestApp.VModels.NewStaff

@{
    Layout = "~/Views/Shared/_LayoutPage_New.cshtml";
    ViewBag.Title = "Edit Staff";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user-edit me-2"></i>Edit Staff Member
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (Model != null && !string.IsNullOrEmpty(Model.IsSucess))
                    {
                        if (Model.IsSucess == "1")
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="fas fa-check-circle me-2"></i>Staff member updated successfully!
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }
                        else if (Model.IsSucess == "2")
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-circle me-2"></i>Error occurred while updating staff member.
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }
                    }
                    
                    @using (Html.BeginForm("EditStaff_New", "Staff", new { staffId = ViewBag.StaffId }, FormMethod.Post, new { @class = "needs-validation", @novalidate = "novalidate" }))
                    {
                        @Html.AntiForgeryToken()
                        
                        <div class="row g-3">
                            <!-- Staff Name -->
                            <div class="col-md-6">
                                <label for="StaffName" class="form-label required">Staff Name</label>
                                @Html.TextBoxFor(model => model.StaffName, new { 
                                    @class = "form-control", 
                                    @placeholder = "Enter staff name", 
                                    @required = "required" 
                                })
                                @Html.ValidationMessageFor(model => model.StaffName, "", new { @class = "invalid-feedback" })
                            </div>
                            
                            <!-- Staff Role -->
                            <div class="col-md-6">
                                <label for="RolePermission" class="form-label">Staff Role</label>
                                @Html.DropDownListFor(x => Model.RolePermission, new List<SelectListItem> { 
                                    new SelectListItem { Value = "", Text = "-- Select Role --" },
                                    new SelectListItem { Value = "Admin", Text = "Admin" }, 
                                    new SelectListItem { Value = "User", Text = "User" } 
                                }, new { @class = "form-select" })
                                @Html.ValidationMessageFor(x => x.RolePermission, "", new { @class = "invalid-feedback" })
                            </div>
                            
                            <!-- Date of Birth -->
                            <div class="col-md-6">
                                <label for="DOB" class="form-label">Date of Birth</label>
                                @Html.TextBoxFor(model => model.DOB, new { 
                                    @class = "form-control", 
                                    @type = "date"
                                })
                                @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "invalid-feedback" })
                            </div>
                            
                            <!-- Date of Joining -->
                            <div class="col-md-6">
                                <label for="DOJ" class="form-label">Date of Joining</label>
                                @Html.TextBoxFor(model => model.DOJ, new { 
                                    @class = "form-control", 
                                    @type = "date"
                                })
                                @Html.ValidationMessageFor(model => model.DOJ, "", new { @class = "invalid-feedback" })
                            </div>
                            
                            <!-- Contact Number -->
                            <div class="col-md-6">
                                <label for="CantactNum" class="form-label">Contact Number</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                    @Html.TextBoxFor(model => model.CantactNum, new { 
                                        @class = "form-control", 
                                        @placeholder = "Enter contact number"
                                    })
                                </div>
                                @Html.ValidationMessageFor(model => model.CantactNum, "", new { @class = "invalid-feedback" })
                                <div class="form-text text-muted">
                                    <i class="fas fa-info-circle"></i> Contact number is for reference only and not stored in the database.
                                </div>
                            </div>
                            
                            <!-- Status -->
                            <div class="col-md-6">
                                <label for="Status" class="form-label required">Status</label>
                                @Html.DropDownListFor(x => Model.Status, new List<SelectListItem> { 
                                    new SelectListItem { Value = "", Text = "-- Select Status --" },
                                    new SelectListItem { Value = "Active", Text = "Active" }, 
                                    new SelectListItem { Value = "Inactive", Text = "Inactive" } 
                                }, new { @class = "form-select", @required = "required" })
                                @Html.ValidationMessageFor(x => x.Status, "", new { @class = "invalid-feedback" })
                            </div>
                        </div>
                        
                        <!-- Form Actions -->
                        <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                            <div>
                                <a href="@Url.Action("StaffList_New", "Staff")" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Back to Staff List
                                </a>
                            </div>
                            <div class="d-flex gap-3">
                                <button type="reset" class="btn btn-outline-info">
                                    <i class="fas fa-undo me-2"></i>Reset
                                </button>
                                <button type="submit" class="btn btn-info">
                                    <i class="fas fa-save me-2"></i>Update Staff
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Confirmation Modal -->
<div class="modal fade" id="confirmUpdateModal" tabindex="-1" aria-labelledby="confirmUpdateModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="confirmUpdateModalLabel">
                    <i class="fas fa-question-circle me-2"></i>Confirm Update
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to update this staff member's information?</p>
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-1"></i>
                    All changes will be saved to the database.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancel
                </button>
                <button type="button" class="btn btn-info" onclick="submitForm()">
                    <i class="fas fa-save me-1"></i>Update Staff
                </button>
            </div>
        </div>
    </div>
</div>

<style>
.required::after {
    content: " *";
    color: red;
}

.card {
    border: none;
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
}

.form-control:focus,
.form-select:focus {
    border-color: #0dcaf0;
    box-shadow: 0 0 0 0.2rem rgba(13, 202, 240, 0.25);
}

.btn {
    border-radius: 0.375rem;
}

.alert {
    border-radius: 0.5rem;
}

@@media (max-width: 768px) {
    .container-fluid {
        padding: 10px;
    }
    
    .d-flex.gap-3 {
        flex-direction: column;
    }
    
    .d-flex.gap-3 .btn {
        width: 100%;
    }
    
    .d-flex.justify-content-between {
        flex-direction: column;
        gap: 15px;
    }
}
</style>

<script>
$(document).ready(function() {
    // Form validation
    $('.needs-validation').on('submit', function(e) {
        var isValid = true;
        
        // Check required fields
        $(this).find('[required]').each(function() {
            if (!$(this).val().trim()) {
                isValid = false;
                $(this).addClass('is-invalid');
            } else {
                $(this).removeClass('is-invalid').addClass('is-valid');
            }
        });
        
        if (!isValid) {
            e.preventDefault();
            alert('Please fill in all required fields.');
            return false;
        }
        
        // Show loading state
        var $submitBtn = $('button[type="submit"]');
        var originalText = $submitBtn.html();
        $submitBtn.html('<i class="fas fa-spinner fa-spin me-2"></i>Updating...').prop('disabled', true);
        
        return true;
    });
    
    // Real-time validation
    $('[required]').on('input', function() {
        if ($(this).val().trim()) {
            $(this).removeClass('is-invalid').addClass('is-valid');
        } else {
            $(this).removeClass('is-valid').addClass('is-invalid');
        }
    });
    
    // Auto-dismiss alerts after 5 seconds
    setTimeout(function() {
        $('.alert').fadeOut();
    }, 5000);
});

function submitForm() {
    $('#confirmUpdateModal').modal('hide');
    $('.needs-validation').submit();
}

function showConfirmation() {
    $('#confirmUpdateModal').modal('show');
}
</script>