@model TestApp.VModels.StaffSignUP
@{
    ViewBag.Title = "Create New User Account";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Create New User Account</title>
    
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    
    <style>
        .create-user-container {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 40px 20px;
        }
        
        .create-user-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
            padding: 40px;
            max-width: 800px;
            margin: 0 auto;
            border: none;
        }
        
        .create-user-header {
            text-align: center;
            margin-bottom: 40px;
        }
        
        .create-user-header .icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            color: white;
            font-size: 24px;
        }
        
        .create-user-title {
            color: #333;
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 10px;
        }
        
        .create-user-subtitle {
            color: #666;
            font-size: 16px;
        }
        
        .form-group-modern {
            margin-bottom: 25px;
        }
        
        .form-label-modern {
            display: block;
            color: #333;
            font-weight: 600;
            margin-bottom: 8px;
            font-size: 14px;
        }
        
        .input-wrapper {
            position: relative;
        }
        
        .form-control-modern {
            width: 100%;
            padding: 15px 20px 15px 50px;
            border: 2px solid #e9ecef;
            border-radius: 10px;
            font-size: 16px;
            transition: all 0.3s ease;
            background: #f8f9fa;
        }
        
        .form-control-modern:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            background: white;
            outline: none;
        }
        
        .select-modern {
            appearance: none;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='m6 8 4 4 4-4'/%3e%3c/svg%3e");
            background-position: right 12px center;
            background-repeat: no-repeat;
            background-size: 16px 12px;
            padding-right: 40px;
        }
        
        .input-icon {
            position: absolute;
            left: 18px;
            top: 50%;
            transform: translateY(-50%);
            color: #667eea;
            font-size: 16px;
            z-index: 10;
        }
        
        .btn-create-user {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            border: none;
            border-radius: 10px;
            color: white;
            font-size: 16px;
            font-weight: 600;
            padding: 15px 30px;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            margin-right: 15px;
        }
        
        .btn-create-user:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(40, 167, 69, 0.4);
            color: white;
        }
        
        .btn-cancel {
            background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
            border: none;
            border-radius: 10px;
            color: white;
            font-size: 16px;
            font-weight: 600;
            padding: 15px 30px;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
        }
        
        .btn-cancel:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(108, 117, 125, 0.4);
            color: white;
        }
        
        .button-group {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-top: 30px;
        }
        
        .alert-modern {
            border-radius: 10px;
            border: none;
            padding: 15px;
            margin-bottom: 20px;
        }
        
        .alert-success-modern {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            color: white;
        }
        
        .alert-danger-modern {
            background: linear-gradient(135deg, #dc3545 0%, #fd7e14 100%);
            color: white;
        }
        
        .password-strength {
            margin-top: 5px;
            font-size: 12px;
        }
        
        .strength-weak { color: #dc3545; }
        .strength-medium { color: #ffc107; }
        .strength-strong { color: #28a745; }
        
        .row-modern {
            display: flex;
            flex-wrap: wrap;
            margin: -15px;
        }
        
        .col-modern {
            flex: 1;
            padding: 15px;
            min-width: 300px;
        }
        
        @@media (max-width: 768px) {
            .col-modern {
                min-width: 100%;
            }
            
            .button-group {
                flex-direction: column;
                gap: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="create-user-container">
        <div class="create-user-card">
            <div class="create-user-header">
                <div class="icon">
                    <i class="fas fa-user-plus"></i>
                </div>
                <h2 class="create-user-title">Create Login Account</h2>
                <p class="create-user-subtitle">Set up a new user account for staff member</p>
            </div>

            <div id="alertContainer"></div>

            @using (Html.BeginForm("NewUserLoginAcc", "Staff", FormMethod.Post, new { id = "createUserForm" }))
            {
                @Html.ValidationSummary(false, "", new { @id = "Errors", @class = "text-danger" })
                @Html.HiddenFor(model => model.IsSucess, new { @id = "IsSucess" })

                <div class="row-modern">
                    <div class="col-modern">
                        <div class="form-group-modern">
                            <label class="form-label-modern">Staff Name</label>
                            <div class="input-wrapper">
                                <i class="fas fa-user-tie input-icon"></i>
                                @Html.DropDownListFor(model => model.StaffID, new SelectList(Model.StaffList, "Value", "Text"), "Select Staff Member", new { 
                                    @class = "form-control form-control-modern select-modern", 
                                    @required = "required", 
                                    @id = "StaffName" 
                                })
                            </div>
                        </div>

                        <div class="form-group-modern">
                            <label class="form-label-modern">User Name</label>
                            <div class="input-wrapper">
                                <i class="fas fa-user input-icon"></i>
                                @Html.TextBoxFor(model => model.UserID, new {
                                    @id = "username",
                                    @class = "form-control form-control-modern",
                                    @placeholder = "Enter unique username",
                                    @required = "required",
                                    @autocomplete = "username"
                                })
                            </div>
                        </div>

                        <div class="form-group-modern">
                            <label class="form-label-modern">Role Permission</label>
                            <div class="input-wrapper">
                                <i class="fas fa-shield-alt input-icon"></i>
                                @Html.DropDownListFor(x => Model.RolePermission, new List<SelectListItem> {
                                    new SelectListItem {Value="Admin",Text="Administrator" },
                                    new SelectListItem {Value="User",Text="Standard User" }
                                }, "Select Role Permission", new { 
                                    @class = "form-control form-control-modern select-modern", 
                                    @required = "required", 
                                    @id = "RolePermission" 
                                })
                            </div>
                        </div>
                    </div>

                    <div class="col-modern">
                        <div class="form-group-modern">
                            <label class="form-label-modern">Password</label>
                            <div class="input-wrapper">
                                <i class="fas fa-lock input-icon"></i>
                                @Html.PasswordFor(model => model.Password, new {
                                    @id = "password",
                                    @class = "form-control form-control-modern",
                                    @placeholder = "Enter secure password",
                                    @required = "required",
                                    @autocomplete = "new-password"
                                })
                            </div>
                            <div id="passwordStrength" class="password-strength"></div>
                        </div>

                        <div class="form-group-modern">
                            <label class="form-label-modern">Confirm Password</label>
                            <div class="input-wrapper">
                                <i class="fas fa-lock input-icon"></i>
                                @Html.PasswordFor(model => model.ConfirmPassword, new {
                                    @id = "confirmPassword",
                                    @class = "form-control form-control-modern",
                                    @placeholder = "Confirm your password",
                                    @required = "required",
                                    @autocomplete = "new-password"
                                })
                            </div>
                            <div id="passwordMatch" class="password-strength"></div>
                        </div>
                    </div>
                </div>

                <div class="button-group">
                    <button type="submit" id="btnSave" class="btn-create-user">
                        <i class="fas fa-user-plus"></i> Create Account
                    </button>
                    <button type="button" id="btnCancel" class="btn-cancel">
                        <i class="fas fa-times"></i> Cancel
                    </button>
                </div>
            }
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function() {
            // Prevent back button access after logout (same logic as other pages)
            @if (Session["UserID"] == null || string.IsNullOrEmpty(Session["UserID"].ToString()))
            {
                <text>
                // If no valid session, prevent browser back button and redirect to login
                function preventBackButton() {
                    window.history.forward();
                    setTimeout(preventBackButton, 0);
                }
                preventBackButton();
                
                if (window.history && window.history.pushState) {
                    $(window).on('popstate', function(e) {
                        window.location.replace('@Url.Action("StaffLogin", "Staff")');
                        return false;
                    });
                    
                    // Replace current history entry
                    window.history.replaceState(null, null, '@Url.Action("StaffLogin", "Staff")');
                }
                
                // Prevent page caching
                if (window.performance && window.performance.navigation.type === 2) {
                    window.location.replace('@Url.Action("StaffLogin", "Staff")');
                }
                
                // Clear any client-side storage
                if (typeof Storage !== "undefined") {
                    sessionStorage.clear();
                    localStorage.clear();
                }
                </text>
            }
            
            // Password strength validation
            $('#password').on('input', function() {
                const password = $(this).val();
                const strength = checkPasswordStrength(password);
                const strengthElement = $('#passwordStrength');
                
                strengthElement.removeClass('strength-weak strength-medium strength-strong');
                
                if (password.length === 0) {
                    strengthElement.text('');
                    return;
                }
                
                if (strength.score < 3) {
                    strengthElement.addClass('strength-weak').text('Weak - ' + strength.feedback);
                } else if (strength.score < 5) {
                    strengthElement.addClass('strength-medium').text('Medium - ' + strength.feedback);
                } else {
                    strengthElement.addClass('strength-strong').text('Strong - Good password!');
                }
                
                checkPasswordMatch();
            });

            // Password confirmation validation
            $('#confirmPassword').on('input', function() {
                checkPasswordMatch();
            });

            function checkPasswordStrength(password) {
                let score = 0;
                let feedback = [];
                
                if (password.length >= 8) score++;
                else feedback.push('at least 8 characters');
                
                if (/[a-z]/.test(password)) score++;
                else feedback.push('lowercase letter');
                
                if (/[A-Z]/.test(password)) score++;
                else feedback.push('uppercase letter');
                
                if (/\d/.test(password)) score++;
                else feedback.push('number');
                
                // Use a simpler approach for special characters to avoid Razor conflicts
                var hasSpecial = false;
                var specialChars = '!@@#$%^&*()_+-=[]{}|;:,.<>?';
                for (var i = 0; i < password.length; i++) {
                    if (specialChars.indexOf(password.charAt(i)) !== -1) {
                        hasSpecial = true;
                        break;
                    }
                }
                
                if (hasSpecial) score++;
                else feedback.push('special character');
                
                return {
                    score: score,
                    feedback: feedback.length > 0 ? 'Add: ' + feedback.join(', ') : 'Strong password!'
                };
            }

            function checkPasswordMatch() {
                const password = $('#password').val();
                const confirmPassword = $('#confirmPassword').val();
                const matchElement = $('#passwordMatch');
                
                if (confirmPassword.length === 0) {
                    matchElement.text('');
                    return;
                }
                
                if (password === confirmPassword) {
                    matchElement.removeClass('strength-weak').addClass('strength-strong').text('✓ Passwords match');
                } else {
                    matchElement.removeClass('strength-strong').addClass('strength-weak').text('✗ Passwords do not match');
                }
            }

            // Form validation
            $('#createUserForm').on('submit', function(e) {
                const password = $('#password').val();
                const confirmPassword = $('#confirmPassword').val();
                const username = $('#username').val();
                const staffId = $('#StaffName').val();
                const role = $('#RolePermission').val();
                
                // Clear previous alerts
                $('#alertContainer').empty();
                
                // Validate required fields
                if (!staffId || !username || !password || !confirmPassword || !role) {
                    showAlert('Please fill in all required fields.', 'danger');
                    e.preventDefault();
                    return false;
                }
                
                // Validate password strength
                const strength = checkPasswordStrength(password);
                if (strength.score < 3) {
                    showAlert('Password is too weak. Please choose a stronger password.', 'danger');
                    e.preventDefault();
                    return false;
                }
                
                // Validate password match
                if (password !== confirmPassword) {
                    showAlert('Passwords do not match. Please try again.', 'danger');
                    e.preventDefault();
                    return false;
                }
                
                // Validate username length
                if (username.length < 3) {
                    showAlert('Username must be at least 3 characters long.', 'danger');
                    e.preventDefault();
                    return false;
                }
                
                // Show loading state
                $('#btnSave').prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Creating Account...');
                
                return true;
            });

            // Cancel button
            $('#btnCancel').on('click', function() {
                if (confirm('Are you sure you want to cancel? All entered data will be lost.')) {
                    window.location.href = '@Url.Action("Index", "Staff")';
                }
            });

            // Username validation (real-time)
            $('#username').on('input', function() {
                const username = $(this).val();
                if (username.length > 0 && username.length < 3) {
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });

            function showAlert(message, type) {
                const alertClass = type === 'success' ? 'alert-success-modern' : 'alert-danger-modern';
                const alertHtml = `
                    <div class="alert alert-modern ${alertClass}" role="alert">
                        <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-triangle'}"></i>
                        ${message}
                    </div>
                `;
                $('#alertContainer').html(alertHtml);
                
                // Scroll to top to show alert
                $('html, body').animate({ scrollTop: 0 }, 300);
                
                // Auto-hide success alerts after 5 seconds
                if (type === 'success') {
                    setTimeout(function() {
                        $('#alertContainer').fadeOut(300, function() {
                            $(this).empty().show();
                        });
                    }, 5000);
                }
            }

            // Check if form submission was successful
            const isSuccess = $('#IsSucess').val();
            if (isSuccess === 'True') {
                showAlert('Account created successfully! The user can now log in with their credentials.', 'success');
                
                // Optionally redirect after success
                setTimeout(function() {
                    window.location.href = '@Url.Action("Index", "Staff")';
                }, 3000);
            }
        });
    </script>
</body>
</html>                </div>

            </fieldset>
        }
    </div>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js'></script>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.4.5/js/bootstrapvalidator.min.js'></script>
    <script src="js/index.js"></script>
</body>
</html>
<script>
    $(document).ready(function () {
        if ('@Model.IsSucess' == "1") {
            $("#lblmgs").html("<h5 style='color: green;'>Successfully Created Staff Acoount.</h5>");
            $("#btnSave").attr('disabled', true);
        }
        else if ('@Model.IsSucess' == "2") {
            $("#lblmgs").html("<h5 style='color: red;'>Failed to Create Staff Acoount, Please try again.</h5>");
        }
    });

</script>
