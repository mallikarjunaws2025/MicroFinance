<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title - MicroFinance Management System</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/Scripts/Stylesheet.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">            
            <div class="collapse navbar-collapse" id="myNavbar">

                <ul class="nav navbar-nav"> 
                    @if (ViewBag.IsAdmin == true) 
                    {
                             <li>
                                <div class="dropdown">
                                    <button class="dropbtn">Management<span class="caret"></span></button>
                                    <div class="dropdown-content">
                                            @Html.ActionLink("Add new Partner", "NewPartner", "Management")
                                            @Html.ActionLink("New Investment", "ManagemtPage", "Management")
                                            @Html.ActionLink("Investments Details", "InvesterList", "Management")
                                    </div>
                                </div>
                             </li>          
                            <li>
                                <div class="dropdown">
                                    <button class="dropbtn"> Staff  <span class="caret"></span></button>
                                    <div class="dropdown-content">
                               
                                            @Html.ActionLink("Add Staff", "CreateStaff", "Staff")
                                            @Html.ActionLink("Staff List details", "StaffList", "Staff")
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="dropdown">
                                    <button class="dropbtn"> Branch  <span class="caret"></span></button>
                                    <div class="dropdown-content">
                                
                                            @Html.ActionLink("Create Branch", "CreateBranch", "Staff")
                               
                                        @Html.ActionLink("Branch List", "BranchList", "Staff")
                                    </div>
                                </div>
                            </li>
                    }
                    <li> 
                        <div class="dropdown">
                            <button class="dropbtn"> Groups <span class="caret"></span></button>
                            <div class="dropdown-content">
                                @Html.ActionLink("Create Group", "CreateGroup", "Group")
                                @Html.ActionLink("Group List",  "GrpList", "Group")
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="dropdown">
                            <button class="dropbtn"> Membesr <span class="caret"></span></button>
                            <div class="dropdown-content">
                                @Html.ActionLink("Create Member", "CreateMember", "Member")
                                @Html.ActionLink("Member List", "MemberDetails", "Member")
                            </div>
                        </div>
                    </li>
                     <li>
                        <div class="dropdown">
                            <button class="dropbtn">Loans<span class="caret"></span></button>
                            <div class="dropdown-content">                               
                                 @Html.ActionLink("Loan Recovery", "LoansCols", "Loans")
                                @Html.ActionLink("Loans List", "LoanLists", "Loans" , new { GrpCodeID = "", MbrCode="" }, htmlAttributes:null)
                                @Html.ActionLink("Loan Disbus", "LoansDisbus", "Loans", new { iMbrID = "0" }, htmlAttributes:null)
                                @*@Html.ActionLink("ALR Adjustments", "ALRAdjustments", "Loans")*@
                             @*   @Html.ActionLink("Rollback", "Rollback", "Loans")
                                @Html.ActionLink("Withdraw", "WithdrawDateScreen", "Loans")*@
                                @Html.ActionLink("Posting History", "Partialload", "Loans", new { TabName = "HistList" }, htmlAttributes:null)
                            </div>
                        </div>
                    </li>
                     <li>
                        <div class="dropdown">
                            <button class="dropbtn"> Reports  <span class="caret"></span></button>
                            <div class="dropdown-content">            
                                 @Html.ActionLink("Loans Report", "LoansReport", "Report")                        
                                    @Html.ActionLink("Daily Report", "DailyReport", "Report")                               
                                    @Html.ActionLink("Summery Report", "SummeryReport", "Report")
                                 @Html.ActionLink("Recovery Report", "GetRecoveryReport", "Report") 
                            </div>
                        </div>
                    </li>
                    <li>                 
                        <div class="dropdown">
                            <button class="dropbtn">Profile<span class="caret"></span></button>
                            <div class="dropdown-content">
                                @Html.ActionLink("Log Out", "Logout", "Staff")
                                @Html.ActionLink("Change Password", "ChangePWD", "Staff")

                                 @if (ViewBag.IsAdmin == true) 
                                 {
                                    @Html.ActionLink("New User Account", "NewUserLoginAcc", "Staff")
                                 }
                            </div>
                        </div>                
                    </li>
                </ul>  
                <ul class="nav navbar-nav" style="margin-right: 5%">
                        <div class="dropdown">
                            <button class="dropbtn">Logged In User ID : @Session["UserID"]</button>                           
                        </div>
                    </ul>
         
            </div>
        </div>
    </nav>

    <div class="container-fluid text-center">
        <div class="row content">
            <div class="col-sm-3">
                <div class="col-sm-8 text-left">
                </div>
                <div>
                    @RenderBody()
                </div>
            </div>
            <div class="col-sm-3">
            </div>
        </div>
    </div>

    <footer class="container-fluid text-center">
        <p>Expedit Softwares Pvt ltd,<br />           
        </p>
    </footer>

</body>
</html>
