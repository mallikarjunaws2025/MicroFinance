    <!-- Security Script for Session Management -->
    <script>
        // Comprehensive logout and back button protection
        $(document).ready(function() {
            // Check if user is logged out by detecting session
            @if (Session["UserID"] == null || string.IsNullOrEmpty(Session["UserID"].ToString()))
            {
                <text>
                // If no valid session, prevent browser back button and redirect to login
                function preventBackButton() {
                    window.history.forward();
                    setTimeout(preventBackButton, 0);
                }
                preventBackButton();
                
                if (window.history && window.history.pushState) {
                    $(window).on('popstate', function(e) {
                        window.location.replace('@Url.Action("StaffLogin", "Staff")');
                        return false;
                    });
                    
                    // Replace current history entry
                    window.history.replaceState(null, null, '@Url.Action("StaffLogin", "Staff")');
                }
                
                // Prevent page caching
                if (window.performance && window.performance.navigation.type === 2) {
                    window.location.replace('@Url.Action("StaffLogin", "Staff")');
                }
                
                // Clear any client-side storage
                if (typeof Storage !== "undefined") {
                    sessionStorage.clear();
                    localStorage.clear();
                }
                </text>
            }
            else
            {
                <text>
                // For logged-in users, handle logout confirmation
                $('#logoutLink').on('click', function(e) {
                    e.preventDefault();
                    
                    if (confirm('Are you sure you want to logout?')) {
                        // Show loading indicator
                        $(this).html('<i class="fas fa-spinner fa-spin"></i> Logging out...');
                        
                        // Clear client-side data
                        if (typeof Storage !== "undefined") {
                            sessionStorage.clear();
                            localStorage.clear();
                        }
                        
                        // Clear browser cache manually
                        if ('caches' in window) {
                            caches.keys().then(function(names) {
                                names.forEach(function(name) {
                                    caches.delete(name);
                                });
                            });
                        }
                        
                        // Redirect with cache busting
                        var logoutUrl = '@Url.Action("Logout", "Staff")' + '?t=' + new Date().getTime();
                        window.location.replace(logoutUrl);
                    }
                });
                
                // Auto logout on session timeout
                var sessionTimeout = 30 * 60 * 1000; // 30 minutes
                var warningTime = sessionTimeout - 2 * 60 * 1000; // Warning 2 minutes before
                
                setTimeout(function() {
                    if (confirm('Your session will expire in 2 minutes. Do you want to continue?')) {
                        window.location.reload();
                    } else {
                        window.location.replace('@Url.Action("Logout", "Staff")');
                    }
                }, warningTime);
                
                // Set login flag in session storage
                sessionStorage.setItem('isLoggedIn', 'true');
                </text>
            }
            
            // Global cache prevention
            $(window).on('beforeunload', function() {
                // Clear sensitive data before page unload
                if (typeof Storage !== "undefined") {
                    sessionStorage.removeItem('sensitiveData');
                }
            });
        });
        
        // Prevent page caching globally
        window.addEventListener('pageshow', function(event) {
            if (event.persisted || window.performance && window.performance.navigation.type === 2) {
                @if (Session["UserID"] == null || string.IsNullOrEmpty(Session["UserID"].ToString()))
                {
                    <text>
                    // No session, redirect to login
                    window.location.replace('@Url.Action("StaffLogin", "Staff")');
                    </text>
                }
                else
                {
                    <text>
                    // Has session but page from cache, reload to get fresh data
                    window.location.reload(true);
                    </text>
                }
            }
        });
        
        // Disable right-click and certain keyboard shortcuts for security
        document.addEventListener('contextmenu', function(e) {
            e.preventDefault();
        });
        
        document.addEventListener('keydown', function(e) {
            // Disable F12, Ctrl+Shift+I, Ctrl+U
            if (e.key === 'F12' || 
                (e.ctrlKey && e.shiftKey && e.key === 'I') ||
                (e.ctrlKey && e.key === 'u')) {
                e.preventDefault();
            }
        });
    </script>
