<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title - MicroFinance Management System</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/Scripts/Stylesheet.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Modern Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="@Url.Action("HomePage", "Staff")">
                <i class="fas fa-university me-2"></i>MicroFinance
            </a>
            
            <!-- Mobile toggle button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <!-- Navigation Menu -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    @if (Session["UserID"] != null)
                    {
                        if (ViewBag.IsAdmin == true)
                        {
                            <!-- Management Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="managementDropdown" role="button" 
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-cogs me-1"></i>Management
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Add New Partner", "NewPartner", "Management", null, new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("New Investment", "ManagemtPage", "Management", null, new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("Investment Details", "InvesterList", "Management", null, new { @class = "dropdown-item" })</li>
                                </ul>
                            </li>
                            
                            <!-- Staff Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="staffDropdown" role="button" 
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-users me-1"></i>Staff
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Add Staff", "CreateStaff_New", "Staff", null, new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("Staff List", "StaffList_New", "Staff", null, new { @class = "dropdown-item" })</li>
                                </ul>
                            </li>
                            
                            <!-- Branch Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="branchDropdown" role="button" 
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-building me-1"></i>Branch
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Create Branch", "CreateBranch", "Staff", null, new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("Branch List", "BranchList_New", "Staff", null, new { @class = "dropdown-item" })</li>
                                </ul>
                            </li>
                        }
                        
                        <!-- Groups Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="groupsDropdown" role="button" 
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-layer-group me-1"></i>Groups
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Create Group", "CreateGroup_New", "Group", null, new { @class = "dropdown-item" })</li>
                                <li>@Html.ActionLink("Group List", "GrpList_New", "Group", null, new { @class = "dropdown-item" })</li>
                            </ul>
                        </li>
                        
                        <!-- Members Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="membersDropdown" role="button" 
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-friends me-1"></i>Members
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Create Member", "CreateMember_New", "Member", null, new { @class = "dropdown-item" })</li>
                                <li>@Html.ActionLink("Member List", "MemberDetails_New", "Member", null, new { @class = "dropdown-item" })</li>
                            </ul>
                        </li>
                        
                        <!-- Loans Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="loansDropdown" role="button" 
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-money-bill-wave me-1"></i>Loans
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Loan Recovery", "LoansCols", "Loans", null, new { @class = "dropdown-item" })</li>
                                <li>@Html.ActionLink("Loans List", "LoanLists_New", "Loans", new { GrpCodeID = "", MbrCode = "" }, new { @class = "dropdown-item" })</li>
                                <li>@Html.ActionLink("Loan Disbursement", "LoansDisbus_New", "Loans", new { iMbrID = "0" }, new { @class = "dropdown-item" })</li>
                                <li><hr class="dropdown-divider"></li>
                                <li>@Html.ActionLink("Posting History", "Partialload", "Loans", new { TabName = "HistList" }, new { @class = "dropdown-item" })</li>
                            </ul>
                        </li>
                        
                        <!-- Reports Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="reportsDropdown" role="button" 
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-chart-bar me-1"></i>Reports
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Loans Report", "LoansReport", "Report", null, new { @class = "dropdown-item" })</li>
                                <li>@Html.ActionLink("Daily Report", "DailyReport_New", "Report", null, new { @class = "dropdown-item" })</li>
                                <li>@Html.ActionLink("Summary Report", "SummeryReport", "Report", null, new { @class = "dropdown-item" })</li>
                                <li>@Html.ActionLink("Recovery Report", "GetRecoveryReport", "Report", null, new { @class = "dropdown-item" })</li>
                            </ul>
                        </li>
                    }
                </ul>
                
                <!-- User Profile Section -->
                @if (Session["UserID"] != null)
                {
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" 
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-circle me-1"></i>@Session["UserID"]
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><h6 class="dropdown-header">Account</h6></li>
                                <li>@Html.ActionLink("Change Password", "ChangePWD", "Staff", null, new { @class = "dropdown-item" })</li>
                                if (ViewBag.IsAdmin == true)
                                {
                                    <li>@Html.ActionLink("New User Account", "NewUserLoginAcc", "Staff", null, new { @class = "dropdown-item" })</li>
                                }
                                <li><hr class="dropdown-divider"></li>
                                <li>@Html.ActionLink("Log Out", "Logout", "Staff", null, new { @class = "dropdown-item text-danger" })</li>
                            </ul>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </nav>

    <!-- Main Content Area -->
    <main class="main-content">
        <div class="container-fluid py-4">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light py-3 mt-auto">
        <div class="container text-center">
            <p class="mb-0">Â© @DateTime.Now.Year Expedit Softwares Pvt Ltd. All rights reserved.</p>
        </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- Custom JS -->
    <script src="~/Scripts/app.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>