@model TestApp.VModels.Member.MemberViewModel
@{
    ViewBag.Title = "Member Details";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h3 mb-0 text-primary fw-bold">
            <i class="fas fa-users me-2"></i>Member Management
        </h2>
        <a href="@Url.Action("CreateMember_New", "Member")" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Add New Member
        </a>
    </div>

    <!-- Filter Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">
                <i class="fas fa-filter me-2"></i>Filter Members
            </h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("MemberDetails", "Member", FormMethod.Post, new { @class = "row g-3" }))
            {
                <div class="col-md-4">
                    <label for="GrpCode" class="form-label">Group Name</label>
                    @Html.DropDownListFor(x => Model.GrpCode, 
                        new SelectList(Model.GrpNameList, "Value", "Text"), 
                        "-- All Groups --", 
                        new { @class = "form-select", @id = "GrpCode" })
                </div>
                <div class="col-md-4">
                    <label for="StaffId" class="form-label">Staff Name</label>
                    @Html.DropDownListFor(x => Model.StaffMbrList, 
                        new SelectList(Model.StaffMbrList, "Value", "Text"), 
                        "-- All Staff --", 
                        new { @class = "form-select", @id = "StaffId" })
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="button" class="btn btn-outline-primary me-2" onclick="loadData()">
                        <i class="fas fa-search me-1"></i>Search
                    </button>
                    <button type="button" class="btn btn-outline-secondary" onclick="clearFilters()">
                        <i class="fas fa-times me-1"></i>Clear
                    </button>
                </div>
            }
        </div>
    </div>

    <!-- Members Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-list me-2"></i>Member Records
                </h5>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-outline-secondary btn-sm" onclick="exportTableToCSV('mbrtbl', 'members.csv')">
                        <i class="fas fa-download me-1"></i>Export
                    </button>
                    <button type="button" class="btn btn-outline-secondary btn-sm" onclick="printElement('memberTable')">
                        <i class="fas fa-print me-1"></i>Print
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0 align-middle" id="mbrtbl">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Group Name</th>
                            <th>Member Name</th>
                            <th>Husband Name</th>
                            <th>Age</th>
                            <th>Status</th>
                            <th>Address</th>
                            <th>Nominee</th>
                            <th>Phone</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="tbody">
                        <tr>
                            <td colspan="10" class="text-center py-4">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                                <div class="mt-2">Loading member data...</div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteConfirmModalLabel">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this member?</p>
                <div class="alert alert-warning">
                    <strong>Warning:</strong> This action cannot be undone and will permanently remove the member from the system.
                </div>
                <input type="hidden" id="deleteId" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancel
                </button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                    <i class="fas fa-trash me-1"></i>Delete Member
                </button>
            </div>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    loadData();
    
    // Filter change events
    $("#GrpCode, #StaffId").change(function() {
        loadData();
    });
    
    // Delete confirmation
    $('#confirmDeleteBtn').on('click', function() {
        deleteMember();
    });
});

// Load member data
function loadData() {
    var selectedGrpCode = $("#GrpCode").val() || "";
    var vStaffId = $("#StaffId").val() || "";
    
    // Show loading state
    $('.tbody').html(`
        <tr>
            <td colspan="10" class="text-center py-4">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <div class="mt-2">Loading member data...</div>
            </td>
        </tr>
    `);
    
    $.ajax({
        url: '@Url.Action("MemberList", "Member")',
        type: "GET",
        contentType: "application/json;charset=utf-8",
        data: { sGrpCode: selectedGrpCode, sStaffId: vStaffId },
        dataType: "json",
        success: function(result) {
            renderMemberTable(result);
        },
        error: function(xhr, status, error) {
            $('.tbody').html(`
                <tr>
                    <td colspan="10" class="text-center py-4 text-danger">
                        <i class="fas fa-exclamation-triangle"></i>
                        <div class="mt-2">Error loading data: ${error}</div>
                    </td>
                </tr>
            `);
        }
    });
}

// Render member table
function renderMemberTable(members) {
    if (!members || members.length === 0) {
        $('.tbody').html(`
            <tr>
                <td colspan="10" class="text-center py-4 text-muted">
                    <i class="fas fa-users"></i>
                    <div class="mt-2">No members found</div>
                </td>
            </tr>
        `);
        return;
    }
    
    var html = '';
    $.each(members, function(key, item) {
        html += `<tr>
            <td><span class="badge bg-primary">${item.MbrId}</span></td>
            <td><strong>${item.GrpName || ''}</strong></td>
            <td>${item.MbrName || ''}</td>
            <td>${item.Husbandname || ''}</td>
            <td><span class="badge bg-info">${item.Age || ''}</span></td>
            <td><span class="badge ${item.MbrStatus === 'Active' ? 'bg-success' : 'bg-danger'}">${item.MbrStatus || ''}</span></td>
            <td>${item.MbrAddress || ''}</td>
            <td>${item.Nominee || ''}</td>
            <td>${item.PhoneNo2 || ''}</td>
            <td>
                <div class="btn-group" role="group">`;
        
        if ('@ViewBag.IsAdmin' === 'True') {
            html += `
                    <button type="button" class="btn btn-sm btn-outline-primary" onclick="editMember(${item.MbrId})" title="Edit Member">
                        <i class="fas fa-edit"></i>
                    </button>
                    <button type="button" class="btn btn-sm btn-outline-danger" onclick="showDeleteConfirm(${item.MbrId})" title="Delete Member">
                        <i class="fas fa-trash"></i>
                    </button>`;
        }
        
        html += `
                    <button type="button" class="btn btn-sm btn-outline-success" onclick="LoanLaterDisbus(${item.MbrId})" title="Loan Disbursement">
                        <i class="fas fa-money-bill-wave"></i>
                    </button>
                </div>
            </td>
        </tr>`;
    });
    
    $('.tbody').html(html);
}

// Show delete confirmation
function showDeleteConfirm(memberId) {
    $('#deleteId').val(memberId);
    $('#deleteConfirmModal').modal('show');
}

// Delete member
function deleteMember() {
    const memberId = $('#deleteId').val();
    const button = $('#confirmDeleteBtn');
    const originalText = button.html();
    
    button.html('<span class="spinner-border spinner-border-sm me-2"></span>Deleting...');
    button.prop('disabled', true);
    
    $.ajax({
        url: '@Url.Action("DeleteMember", "Member")',
        type: "POST",
        data: { id: memberId },
        success: function(result) {
            if (result.success) {
                $('#deleteConfirmModal').modal('hide');
                loadData();
                showToast('Member deleted successfully', 'success');
            } else {
                showToast(result.message || 'Error deleting member', 'error');
            }
        },
        error: function() {
            showToast('Error deleting member', 'error');
        },
        complete: function() {
            button.html(originalText);
            button.prop('disabled', false);
        }
    });
}

// Navigate to edit member page
function editMember(memberId) {
    window.location.href = '@Url.Action("EditMember_New", "Member")?id=' + memberId;
}

// Clear filters
function clearFilters() {
    $('#GrpCode').val('');
    $('#StaffId').val('');
    loadData();
}

// Loan disbursement function
function LoanLaterDisbus(memberId) {
    window.location.href = '@Url.Action("LoansDisbus", "Loans", new { iMbrID = "' + memberId + '" })';
}
</script>