@model TestApp.VModels.StaffSignUP
<!DOCTYPE html>
<html>
<head>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">
<style>
   .container{ 
       margin-top:35px;
   }
       body {		
       background-color:#636363;
	}
</style>
</head>
<body>
        
    

<div class="container">
<div class="card bg-light" style="width:50%;margin-left:25%;border-color: darkgrey;border-width: 2px;">
<article class="card-body mx-auto" style="max-width: 400px;">
	<h4 class="card-title mt-3 text-center">Create Account</h4><br>
	<label id="lblmgs"></label>
	 @using (Html.BeginForm("StaffSignUp", "Staff", FormMethod.Post))
    {
            @Html.ValidationSummary(false, "", new { @id="Errors", @class = "text-danger" })
       
      <div class="form-group input-group">
    	<div class="input-group-prepend">
		    <span class="input-group-text"> <i class="fa fa-building"></i> </span>
		</div>
		@Html.DropDownListFor(model => model.StaffID,new SelectList(Model.StaffList, "Value", "Text"),"-Selet Staff-",htmlAttributes: new { @class = "form-control",@required="required", id = "StaffName"})
	</div>
      
	<div class="form-group input-group">
		<div class="input-group-prepend">
		    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
		 </div>
        @Html.TextBoxFor(model => model.UserID, new {@id="username", @class="form-control", @placeholder="UserID", @required="required" })
    </div> <!-- form-group// -->
      
      <div class="form-group input-group">
    	<div class="input-group-prepend">
		    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
		</div>
        @Html.TextBoxFor(model => model.Password, new {@id="password", @type="password", @class="form-control", @placeholder="Password", @required="required" })
    </div>
      
    <div class="form-group input-group">
    	<div class="input-group-prepend">
		    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
		</div>
        @Html.TextBoxFor(model => model.ConfirmPassword, new {@id="CnfrmPWD", @type="password", @class="form-control", @placeholder="Confirm Password", @required="required" })
    </div>  
        
      
     <!-- form-group// -->
    <div class="form-group input-group">
    	<div class="input-group-prepend">
		    <span class="input-group-text"> <i class="fa fa-building"></i> </span>
		</div>
		@*@Html.DropDownListFor(x => Model.RolePermission,new SelectList(new[]{"Admin","User"}),"-- Select Role --", htmlAttributes: new { @class = "form-control", id = "RolePermission"})*@
        @Html.DropDownListFor(x => Model.RolePermission,  new List<SelectListItem> {new SelectListItem {Value="Admin",Text="Admin" },new SelectListItem {Value="User",Text="User" }}, "-- Select Role --", htmlAttributes: new { @class = "form-control",@required="required", id = "RolePermission" })
	</div> <!-- form-group end.// -->
          
    <div class="form-group">
        <button type="submit" id="btnSave" class="btn btn-primary btn-block"> Create Account  </button>
    </div> <!-- form-group// -->      
    <p class="text-center">Have an account? @Html.ActionLink("Log In", "StaffLogin", "Staff") </p>                                                                 
}
</article>
</div> <!-- card.// -->

</div> 
<!--container end.//-->
              
</body>
</html>
<script>
    $(document).ready(function () {
        if ('@Model.IsSucess' == "1") {
            $("#lblmgs").html("<h5 style='color: green;'>Successfully Created Staff Acoount.</h5>");
            $("#btnSave").attr('disabled', true);
         }
         else if ('@Model.IsSucess' == "2") {
             $("#lblmgs").html("<h5 style='color: red;'>Failed to Create Staff Acoount, Please try again.</h5>");
        }
     });

</script>